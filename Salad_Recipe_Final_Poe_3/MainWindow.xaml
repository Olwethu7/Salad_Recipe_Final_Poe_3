<Window x:Class="Salad_Recipe_Final_Poe_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Salad_Recipe_Final_Poe_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Screenshot 2024-06-11 093015.png"/>
        </Grid.Background>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Welcome To" FontSize="75" Foreground="White" FontWeight="Bold"/>
            <TextBlock Text="Salad Recipe App" FontSize="40" Foreground="White" Margin="70,-20,0,0"/>

            <Button Content="View More"
             Margin="0,20,0,0"
             Width="150"
             Height="50"
             BorderBrush="White"
             BorderThickness="2"
             Background="Transparent"
             Foreground="White"
             FontWeight="Bold"
             HorizontalAlignment="Center"
             Tag="View_More.xaml"
             Click="Button_Click"/>
        </StackPanel>

        <!-- Frame to host pages -->
        <Frame x:Name="MainContentFrame" NavigationUIVisibility="Hidden" />

    </Grid>
</Window>
